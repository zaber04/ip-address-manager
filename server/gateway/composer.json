{
    "name": "ip-address-manager/gateway",
    "description": "Provides the API gateway microservice",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1",
        "laravel/lumen-framework": "^10.0",
        "laravel/tinker": "^2.8"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.4.4",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Gateway\\": "app/",
            "GatewayDatabase\\Factories\\": "database/factories/",
            "GatewayDatabase\\Seeders\\": "database/seeders/",

            "Authentication\\": "../authentication/app/",
            "AuthenticationDatabase\\Factories\\": "../authentication/database/factories/",
            "AuthenticationDatabase\\Seeders\\": "../authentication/database/seeders/",

            "IpHandler\\": "../ip-handler/app/",
            "IpHandlerDatabase\\Factories\\": "../ip-handler/database/factories/",
            "IpHandlerDatabase\\Seeders\\": "../ip-handler/database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
